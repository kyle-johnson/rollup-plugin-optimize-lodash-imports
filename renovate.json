{
  "extends": [
    "config:recommended",
    ":pinOnlyDevDependencies",
    ":dependencyDashboard",
    ":prHourlyLimit4",
    ":automergeLinters",
    ":automergeTesters",
    ":automergePr",
    ":automergePatch",
    ":automergeRequireAllStatusChecks",
    ":semanticCommits"
  ],
  "prConcurrentLimit": 5,
  "minimumReleaseAge": "5 days",
  "packageRules": [
    {
      "matchPackageNames": [
        "estree-walker"
      ],
      "allowedVersions": "< 3.0.0"
    },
    {
      "matchPackageNames": [
        "@types/node"
      ],
      "extends": [
        ":disableMajorUpdates"
      ]
    },
    {
      "matchPackageNames": [
        "rollup"
      ],
      "extends": [
        "schedule:monthly"
      ]
    },
    {
      "extends": [
        "schedule:monthly"
      ],
      "groupName": "eslint packages",
      "matchPackageNames": [
        "/eslint/",
        "!/jest/"
      ]
    },
    {
      "extends": [
        "schedule:monthly"
      ],
      "groupName": "jest packages",
      "matchPackageNames": [
        "/jest/"
      ]
    },
    {
      "matchPackageNames": [
        "esbuild"
      ],
      "extends": [
        "schedule:monthly"
      ]
    }
  ]
}
