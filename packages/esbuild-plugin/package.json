{
  "name": "@optimize-lodash/esbuild-plugin",
  "version": "4.0.0",
  "description": "Rewrite lodash imports with esbuild for improved tree-shaking.",
  "keywords": [
    "lodash",
    "esbuild",
    "esbuild-plugin",
    "optimize",
    "minify"
  ],
  "homepage": "https://github.com/kyle-johnson/rollup-plugin-optimize-lodash-imports/tree/main/packages/esbuild-plugin",
  "repository": {
    "type": "git",
    "url": "https://github.com/kyle-johnson/rollup-plugin-optimize-lodash-imports.git"
  },
  "type": "module",
  "exports": {
    "import": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "Kyle Johnson",
  "license": "MIT",
  "engines": {
    "node": ">= 20"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:ci": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --ci",
    "build": "rm -rf dist && tsc -p tsconfig.dist.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "depcheck": "depcheck"
  },
  "jest": {
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "testTimeout": 10000,
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  },
  "peerDependencies": {
    "esbuild": ">= 0.8.47"
  },
  "devDependencies": {
    "@tsconfig/node16": "catalog:",
    "@types/estree": "1.0.1",
    "@types/jest": "catalog:",
    "@types/lodash": "catalog:",
    "@types/node": "16.18.125",
    "@oxc-parser/binding-wasm32-wasi": "0.96.0",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "depcheck": "catalog:",
    "esbuild": "0.25.0",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-jest": "catalog:",
    "eslint-plugin-unicorn": "55.0.0",
    "jest": "catalog:",
    "lodash": "catalog:",
    "prettier": "catalog:",
    "ts-jest": "catalog:",
    "typescript": "catalog:"
  },
  "dependencies": {
    "@optimize-lodash/transform": "workspace:*",
    "oxc-parser": "^0.96.0"
  }
}
