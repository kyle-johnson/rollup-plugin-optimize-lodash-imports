{
  "name": "@optimize-lodash/esbuild-plugin",
  "version": "1.0.0",
  "description": "Rewrite lodash imports with esbuild for improved tree-shaking.",
  "keywords": [
    "lodash",
    "esbuild",
    "esbuild-plugin",
    "optimize",
    "minify"
  ],
  "homepage": "https://github.com/kyle-johnson/rollup-plugin-optimize-lodash-imports/tree/main/packages/esbuild-plugin",
  "repository": {
    "type": "git",
    "url": "https://github.com/kyle-johnson/rollup-plugin-optimize-lodash-imports.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "Kyle Johnson",
  "license": "MIT",
  "engines": {
    "node": ">= 12"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "test": "jest",
    "test:ci": "jest --coverage --ci",
    "build": "rm -rf dist && tsc -p tsconfig.dist.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "depcheck": "depcheck"
  },
  "jest": {
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {}
    },
    "testTimeout": 10000
  },
  "peerDependencies": {
    "esbuild": ">= 0.8.0"
  },
  "devDependencies": {
    "@tsconfig/node12": "1.0.9",
    "@types/estree": "0.0.46",
    "@types/jest": "27.0.2",
    "@types/lodash": "4.14.176",
    "@types/node": "10.17.51",
    "@typescript-eslint/eslint-plugin": "5.2.0",
    "@typescript-eslint/parser": "5.2.0",
    "depcheck": "1.4.2",
    "esbuild": "0.13.10",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest": "25.2.2",
    "eslint-plugin-unicorn": "37.0.1",
    "jest": "27.3.1",
    "lodash": "4.17.21",
    "prettier": "2.4.1",
    "ts-jest": "27.0.7",
    "typescript": "4.1.6"
  },
  "dependencies": {
    "@optimize-lodash/transform": "workspace:2.x",
    "acorn": "8.x"
  }
}
